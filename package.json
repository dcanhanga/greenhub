{
  "name": "greenhub",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.{spec.ts,test.ts}": [
      "npm run test:combo"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/lint-staged": "13.3.0",
    "git-commit-msg-linter": "5.0.8",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "npm-run-all": "4.1.5",
    "prettier": "^3.2.5",
    "turbo": "2.3.0",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
